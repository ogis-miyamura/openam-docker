{
    // Hot Code Replaceの定義です。
    // autoにしておくと、javaファイルを変更したときに、warを作り直さなくても、自動的にTomcatに変更内容が反映されます。
    "git-graph.maxDepthOfRepoSearch": 3,
    "gitlens.advanced.repositorySearchDepth": 3,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true,
    }
}
